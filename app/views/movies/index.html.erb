<%= render 'application/navbar' %>
<div class="container">
  <div class="text-center py-3">
    <h1>All Movies!</h1>
  </div>
  <hr>
  <div class="container my-1">
  <div class="row">
  <% @movies.each do |movie| %>
      <div class="col-4 my-2">
        <div class="card shadow p-3 mb-5 bg-white rounded h-100 my-3 py-2" style="min-height: 15rem">
          <img class="card-img-top" src="<%= movie.poster_url%>" alt="Card image cap">
            <div class="card-body">
              <h5 class="card-title text-center"><%= movie.title %></h3>
              <p class="card-text"><%= movie.overview %></p>
            </div>
        </div>
      </div>
  <% end %>
    </div>
    <hr class="py-1">
    <div class="text-center py-2 my-2">
      <%= link_to "Return to lists", lists_path, class: 'btn btn-primary' %>
    </div>
</div>
