
<%= render 'application/navbar' %>
<div class="container">
  <div class="text-center mt-2">
    <h1 style="font-family: Helvetica, sans-serif">All Movies </h1>
  </div>
  <hr>
  <div class="row text-center">
  <% @movies.each do |movie| %>
      <div class="col-3 my-2 card">
        <div class="card-top">
          <div class="shadow" style="min-height: 10rem">
              <img class="card-img-top" src="<%= movie.poster_url%>" alt="Card image cap">
          </div>
        </div>
        <div class="card-inner">
          <h5 class="card-title text-center my-2"><%= movie.title %></h5>
          <hr>
          <p><%= movie.overview %></p>
          <hr>
          <%= link_to "Upload image", class: "btn btn-primary py-3"%>
        </div>
      </div>
  <% end %>
  </div>
    <hr class="py-1">
</div>
